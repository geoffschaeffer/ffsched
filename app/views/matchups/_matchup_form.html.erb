<div class="row">
  <div class="span6 offset3">
    <%= form_for [@league, @matchup] do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :team1_id %>
      <%= f.select :team1_id, @league.teams.map{|u| [u.name,u.id]} %>

      <%= f.label :team2_id %>
      <%= f.select :team2_id, @league.teams.map{|u| [u.name,u.id]} %>

      <%= f.label :week %>
      <%= f.select :week, (1..13).map{|u| [u,u]} %>

      <%= f.submit btn_label, class: "btn btn-large btn-primary" %>
      <%= link_to "Cancel", league_matchups_path(@league), class: "btn btn-mini btn-primary" %>
    <% end %>
  </div>
</div>