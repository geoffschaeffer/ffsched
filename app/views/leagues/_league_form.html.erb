<div class="row">
  <div class="span6 offset3">
    <%= form_for(@league) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.submit btn_label, class: "btn btn-large btn-primary" %>
      <%= link_to "Cancel", leagues_path, class: "btn btn-mini btn-primary" %>
    <% end %>
  </div>
</div>