<% provide(:title, "Update team") %>
<h1>Update team</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for [@league, @team] do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :owner %>
      <%= f.text_field :owner %>

      <%= f.submit "Update team", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>